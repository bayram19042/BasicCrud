@model BasicCrud.Models.Product
@{
    ViewData["Title"] = "Index";
    //Layout = "~/Views/_Layout.cshtml";

}
<div class="container">
    <div class="d-flex justify-content-end mt-5"><a asp-action="add" asp-controller="home" class="btn btn-outline-info btn-sm">Ürünleri Listele</a></div>

    <hr />
    <div class="card">
        <div class="card-body">
            <form asp-action="guncelle">
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-warning text-white">Ürün Adı:</span>
                        </div>
                        <input asp-for="Name" value="@Model.Name" class="form-control " />
                    </div>

                </div>

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-warning text-white">Ürün Kategorisi:</span>
                        </div>
                        <input asp-for="Category" value="@Model.Category" class="form-control" />
                    </div>

                </div>


                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-warning text-white">Ürün Sayısı:</span>
                        </div>
                        <input asp-for="ProductCount" value="@Model.ProductCount" class="form-control" />
                    </div>

                </div>
                <input type="hidden"  asp-for="ProductId" value="@Model.ProductId"/>
                <button class="btn btn-info btn-sm">Ürünü Güncelle</button>

            </form>
        </div>
    </div>
</div>


